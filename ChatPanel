import javax.swing.JPanel;
import java.awt.GridBagLayout;
import net.miginfocom.swing.MigLayout;
import java.awt.GridLayout;
import java.awt.BorderLayout;
import javax.swing.border.TitledBorder;

import java.io.*;
import java.net.Socket;

import javax.swing.border.TitledBorder;
import javax.swing.JPanel;
import java.awt.BorderLayout;
import javax.swing.border.TitledBorder;
import java.awt.GridLayout;
import javax.swing.JScrollPane;
import javax.swing.JTextArea;
import javax.swing.JButton;
import javax.swing.JFileChooser;

import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class ChatPanel extends JPanel {
	Socket socket = null;
    BufferedReader bf = null;
    DataOutputStream os = null;
    Output t = null;
    String sender;
    String reciever;
    JTextArea txtMessages;
    final File[] fileToSend = new File[1];
	/**
	 * Create the panel.
	 */
	public ChatPanel(Socket s,String sender, String reciever) {
		setLayout(new BorderLayout(0, 0));
		
		JPanel panel = new JPanel();
		panel.setBorder(new TitledBorder(null, "Message", TitledBorder.LEADING, TitledBorder.TOP, null, null));
		add(panel, BorderLayout.SOUTH);
		panel.setLayout(new GridLayout(1, 2, 0, 0));
		
		JScrollPane scrollPane = new JScrollPane();
		panel.add(scrollPane);
		
		JTextArea txtMessage = new JTextArea();
		scrollPane.setViewportView(txtMessage);
		
		JButton btnSend = new JButton("Send");
		btnSend.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				if(txtMessage.getText().trim().length()==0) return;
				try {
					os.writeBytes(txtMessage.getText());
					os.write(13); os.write(10);
					os.flush();
					txtMessages.append("\n" + sender + ": " + txtMessage.getText());
					txtMessage.setText("");
				}
				catch(Exception ex){
				ex.printStackTrace();
				}
			}
		});
		
		JButton btnSendFile = new JButton("Ch\u1ECDn \u0111\u01B0\u1EDDng d\u1EABn");
		btnSendFile.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				JFileChooser file_chooser = new JFileChooser();
				file_chooser.setApproveButtonText("Send");
				file_chooser.setMultiSelectionEnabled(true);
				int check_status = file_chooser.showOpenDialog(null);
				if(check_status != JFileChooser.APPROVE_OPTION) {
					txtMessages.append("\nPlease choose a file to send first!");
				}else {
					File chosen_file = file_chooser.getSelectedFile();
					fileToSend[0] = chosen_file;
					txtMessages.append("\nSend file " + fileToSend[0].getName() + " Success!!");
				}
			}
		});
		panel.add(btnSendFile);
		panel.add(btnSend);
		
		JScrollPane scrollPane_1 = new JScrollPane();
		add(scrollPane_1, BorderLayout.CENTER);
		
		txtMessages = new JTextArea();
		scrollPane_1.setViewportView(txtMessages); 
		
		socket = s;
        this.sender = sender;
        this.reciever = reciever;
        try{
            bf = new BufferedReader( new InputStreamReader(socket.getInputStream()));
            os = new DataOutputStream(socket.getOutputStream());
            
            
            t = new Output(s, txtMessages, sender, reciever);
            t.start();
        }
        catch(Exception e){ 
        }
	}
	public JTextArea getTxtMessages(){
        return this.txtMessages;
    }
	
}

